<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="word"
            type="com.mutant.wordsmaster.data.source.model.Word" />

        <variable
            name="isExpanded"
            type="Boolean" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="listener"
            type="com.mutant.wordsmaster.words.WordsListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/card_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="@{() -> listener.onNavigatorAddEditWordActivity(word.title)}"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_pron"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="bottom"
                    android:contentDescription="@string/image_view_pron"
                    android:elevation="6dp"
                    android:onClick="@{() -> listener.onTtsSpeak(word.title)}"
                    android:padding="8dp"
                    android:src="@drawable/ic_volume_up_white_24px"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:text="@{word.title}"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/image_view_pron"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:hint="@string/title" />

                <!--<android.support.v7.widget.AppCompatTextView-->
                <!--android:id="@+id/text_view_explanation"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:ellipsize="end"-->
                <!--android:hint="Explanation" />-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/image_view_expand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_view_expand"
                android:onClick="@{() -> listener.onExpandDef(word)}"
                android:padding="8dp"
                android:src="@{isExpanded ? @drawable/ic_expand_less_white_24px : @drawable/ic_expand_more_white_24px}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint_layout_top" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_layout_def"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/background_card_def"
                android:orientation="vertical"
                android:visibility="gone"
                app:cardCornerRadius="4dp"
                app:goneUnless="@{isExpanded ?? false}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_expand"
                tools:visibility="visible">

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>