<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mutant.wordsmaster.words.WordsFragment">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="title" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit_text_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="explanation"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_title" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edit_text_eg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g."
        app:layout_constraintTop_toBottomOf="@+id/edit_text_explanation" />

</android.support.constraint.ConstraintLayout>
